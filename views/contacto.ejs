    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.10/lodash.min.js"></script>
    <script src="/javascripts/main.js"></script>
    <script type="text/javascript">
      var url = new URL(window.location.href);
      var c = url.searchParams.get("success");
      var box = document.getElementById('msjBox');
      if (c !== null) {
        box.style.display = "block";
        if (c == "true") {
          box.innerHTML = "<code>El mensaje se envió correctamente! En breve el equipo de PrecioBTC.com se pondrá en contacto contigo.</code>";
        } else {
          box.innerHTML = "<code>Algo salió mal y el mensaje no se envió. Por favor intenta de nuevo.</code>";
        }
      } else {
        box.style.display = "none";
      }
    </script>

