  </head>
  <body ng-controller="mainController" ng-cloak>

    <div menu active='home'></div>

    <div class="container ticker">
      <div class="row">
        <div class="six columns dolar">
          <ul class="toLeft">
            <li>Dolar venta</li>
            <li class="green">{{ dolar.venta | currency:"$ ":2 }}</li>
            <li>·</li>
            <li>Dolar compra</li>
            <li class="green">{{ dolar.compra | currency:"$ ":2 }}</li>
          </ul>
        </div>
        <div class="six columns">
          <ul>
            <li><i class="fas fa-question-circle" tooltips tooltip-template="Mercados referentes" tooltip-size="smalll" tooltip-side="left"></i> Bitfinex</li>
            <li class="green">{{ bitfinex.last_price | currency:"USD ":2 }}</li>
            <li>·</li>
            <li>Bitstamp</li>
            <li class="green">{{ bitstamp.last | currency:"USD ":2 }}</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container two" style="padding-top: 40px;">
      <pre id="msjBox"><code></code></pre>
      <h4 style="margin-bottom: 20px;">Formulario de contacto</h4>
      <form name="contacto" method="post" action="/contacto">
        <div class="row">
          <div class="six columns" style="margin-top: 20px;">
            <label for="exampleEmailInput">Tu e-mail</label>
            <input name="email" class="u-full-width" type="email" placeholder="test@mailbox.com" id="exampleEmailInput" required>
          </div>
          <div class="six columns" style="margin-top: 20px;">
            <label for="exampleRecipientInput">Razón del contacto</label>
            <select class="u-full-width" id="exampleRecipientInput" name="razon" required>
              <option value="Agregar cotizacion">Agregar cotización</option>
              <option value="Problema con cotizacion">Problema con cotización</option>
              <option value="Problema con calculadora">Problema con calculadora</option>
              <option value="Prensa">Prensa</option>
              <option value="Contacto general">Contacto general</option>
              <option value="Recomendaciones">Recomendaciones</option>
              <option value="Alagos">Alagos :)</option>
            </select>
          </div>
        </div>
        <label for="exampleMessage" style="margin-top: 20px;">Mensaje</label>
        <textarea class="u-full-width" placeholder="Querido equipo..." id="exampleMessage" name="mensaje" style="height: 101px" required></textarea>
        <input class="button-primary u-full-width send" type="submit" value="Enviar">
      </form>
    </div>

    <div pie></div>
    
    <div class="ssl">
      <script language="JavaScript" type="text/javascript">
        TrustLogo("https://www.preciobtc.com/images/comodo_secure_seal_76x26_transp.png", "CL1", "none");
      </script>
      <a href="https://www.positivessl.com/" id="comodoTL">Positive SSL</a>
    </div>

